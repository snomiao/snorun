{
  "name": "snorun",
  "version": "1.6.0",
  "description": "Run & interact with shell command like in node without pain.",
  "keywords": [
    "async",
    "child_process",
    "cmd",
    "exec",
    "shell",
    "spawn"
  ],
  "homepage": "https://github.com/snomiao/snorun#readme",
  "bugs": {
    "url": "https://github.com/snomiao/snorun/issues"
  },
  "license": "MIT",
  "author": "Snowstar Miao <snomiao@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.min.cjs",
  "repository": "https://github.com/snomiao/snorun",
  "scripts": {
    "build": "bun build index.ts --outdir=dist && bun build:umd",
    "build:umd": "bunx rollup dist/index.js --file dist/index.umd.js --format umd --name \"snorun\"",
    "prepack": "npm run build",
    "prerelease": "bun run build && bun run test",
    "release": "bunx standard-version && git push --follow-tags && npm publish",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.2.13",
    "@types/jest": "^29.5.14",
    "@types/node": "18.8.3",
    "chalk": "^5.1.0",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "exports": {
    "types": "./index.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "gitHead": "ca1c2db9974aa48a03d7695327ba73367192028c",
  "module": "dist/index.min.mjs",
  "types": "index.ts",
  "dependencies": {
    "tsa-composer": "^3.0.3"
  }
}
